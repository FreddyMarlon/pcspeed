<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">            
            <div class="card animated flipInY">
                <div class="card-header bg-dark text-center">                                        
                    <img src="/img/loginuser.png" alt="loginuser" class="card-img-top mx-auto m-2">                     
                     <h3>Abrir Sesi√≥n</h3> 
                </div>
                <div class="card-body text-left">
                    <form action="/signin" method="POST" autocomplete="off">
                      <div class="form-group">
                          <span>Usuario:</span>
                          <input type="text" id="mayus" pattern="[a-zA-Z0-9_.-]{1,16}" name="usuario"  class="form-control" autofocus required>
                      </div>
                      <div class="form-group">
                          <span>Clave:</span>
                          <input type="password" pattern="[a-zA-Z0-9_*&%.-]{1,16}" name="clave"  class="form-control" required>
                      </div>                      
                      <div class="form-group">
                          <button class="btn btn-primary btn-block">
                            Entrar
                          </button>
                      </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>