<div class="container p-4">
    <div class="row">                        
     		<div class="col"> 
      			<div class="card animated flipInY">
          				<div class="card-header bg-dark text-white text-center">
       							<img src="/img/precio.png"  width="100">
          					<h3>Lista de Precios</h3>                    
          				</div>
                  <div class="text-right">                                   
                      <aside>
                         <a class="btn btn-primary" href="/" role="button">Salir</a>
                         <a class="btn btn-primary" href="#" role="button">Actualizar</a>                                                
                      </aside>
          				</div>	                  	                  
          				<div class="card-body">
                       <div class="form-group">
						              <span>Ingrese Cotización actual del $:</span>
          				    	  <input  type="number" step="0.01" name="tasa" value="4.68" class="form-control" autofocus required>								                           
                        </div>                          
          				</div>
                  <div>
                    <table class="table table-hover">
                        <thead>
                          <tr>
                           <th scope="col"></th>
                           <th scope="col">Cod.</th>
                           <th scope="col">Servicio</th>
                           <th scope="col">Descripción</th>
                           <th scope="col">Precio($)</th>
                           <th scope="col">Precio(Bs)</th>
                           <th scope="col">Categoría</th>
                          </tr>
                        </thead>
                        <tbody>
                        {{#each links}}  
                            <tr>
                                <th scope="row"></th>
                                <td class="mip">{{id}}</td>
                                <td class="mip">{{nom}}</td>
                                <td class="mip">{{des}}</td>                                
                                <td class="mip">{{preciod}}</td>
                                <td class="mip">{{preciob}}</td>
                                <td class="mip">{{categoria}}</td>
                            </tr>
                          {{/each}}      
                        </tbody>
                     </table>
                  </div>          													   					     
  				      </div>
   			    </div>          			
     	  </div>
    </div>
</div>	     
