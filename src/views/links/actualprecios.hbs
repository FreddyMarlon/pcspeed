<div class="container p-4">
     <div class="row">
         
         <div class="col-md-4 mx-auto">
             <div class="card-header bg-dark text-center">
                    <img src="/img/logoreg.png"  class="card-img-top mx-auto m-2 rounded-circle w-25">
                    <h3>Ingrese ajustes de precios</h3>
             </div>
             <div class="card-body bg-light text-left">                               
                <form action="/enlaces/actualprecios" method="POST" autocomplete="off" name="ajustep">
                
                    <div class="form-group">
                        <span>Tasa actual $:</span>
                        <input type="number" step="0.01" min="0" max="10" value={{link.tasacambio}} class="form-control" name="tasacambio" autofocus required>                        
                    </div>
                    <div class="form-group">
                        <span>Incremento:</span>
                        <input type="number" step="1" min="0" max="1000" value={{link.costos}} class="form-control" name="costos" required>                        
                    </div>
                
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">
                           Enviar
                        </button>
                    </div>
                </form>
                
             </div>
         </div>
     </div>  
</div>